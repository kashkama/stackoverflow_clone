<h1 class="loginform">Log In</h1>

<div class="container-fluid">

    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag :email %><br/>
        <%= text_field_tag :email %>
      </div>

      <div class="field">
        <%= label_tag :password %><br/>
        <%= password_field_tag :password %>
      </div>

      <div class="actions">
        <%= submit_tag "Log In",class:"btn btn-success text-center"%>
      </div>
    <% end %>

</div>
