<!DOCTYPE html>
<div class="container-fluid">
  <%= render 'layouts/errors', :object => @question %>

  <%= form_for @question do |f| %>
    <%= f.label :author %><br/>
    <%= f.text_field :author %><br/>
    <%= f.label :question %><br/>
    <%= f.text_area :query, size: "24x6"%><br/>
    <%= f.submit class: "btn btn-large btn-primary"%>
  <% end %>
</div>
